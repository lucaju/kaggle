{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
		"quotes": [2, "single"],
		"no-multi-spaces": 0,
		"no-trailing-spaces": 0,
		"no-unused-vars": 2,
		"semi": ["error", "always"],
		"require-await": ["error"]
    }
}